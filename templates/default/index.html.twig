{% extends 'base.html.twig' %}

{% block title %}Form {{ controller_name }}{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Form test with {{ controller_name }}</h1>
        {% for user in users %}
            <ul>
                <li>{{ user.username }}, {{ user.email }}
                    <a href="{{ path('app_edit_user', {id: user.id}) }}">Edit</a>
                </li>
            </ul>
        {% else %}
            <p>No user in the database, use this command to generate/add new user :</p>
            <code>
                bin/console doctrine:fixture:load [--append]
            </code>
        {% endfor %}
        <p><a href="{{ path('app_new_user') }}">Add new user</a></p>
    </div>
{% endblock %}
